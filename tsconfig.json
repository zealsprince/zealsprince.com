{
  "extends": [
    "@tsconfig/svelte",
    "./.svelte-kit/tsconfig.json"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vite-plugin-glsl/ext"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.d.ts",
    "svelte.config.js",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
