{
  "extends": [
    "@tsconfig/svelte",
    "./.svelte-kit/tsconfig.json"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/scenes/*": [
        "src/scenes/*"
      ],
      "$lib/*": [
        "src/lib/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.d.ts",
    "svelte.config.js",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
